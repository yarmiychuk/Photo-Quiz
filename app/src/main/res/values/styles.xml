<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Background ImageView style -->
    <style name="MyImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Button style -->
    <style name="MyButtonStyle">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/button_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/button_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_vertical</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <!-- TextView style -->
    <style name="MyTextViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/standard_space</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyTextViewStyle.Intro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MyTextViewStyle.Question">
        <item name="android:background">@drawable/dark_background_out</item>
    </style>

    <style name="MyTextViewStyle.Result">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Answers Items style -->
    <style name="MyAnswerItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <!-- AlertDialogTheme -->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/black</item>
    </style>

    <!-- Result layout style -->
    <style name="MyResultLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/background_score</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/standard_space</item>
        <item name="android:paddingRight">@dimen/standard_space</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- Divider style -->
    <style name="MyDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_thickness</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginRight">@dimen/standard_space</item>
        <item name="android:layout_marginLeft">@dimen/standard_space</item>
    </style>

</resources>
