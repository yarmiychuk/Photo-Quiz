<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Question TextView style -->
    <style name="QuestionTextViewStyle">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:background">@drawable/question_background</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">@dimen/question_text_shadow_radius</item>
    </style>

</resources>
