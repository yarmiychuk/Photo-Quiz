<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button style -->
    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/button_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/button_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_vertical</item>
    </style>

    <!-- TextView style -->
    <style name="TextViewStyle">
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:shadowRadius">@dimen/question_text_shadow_radius</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:background">@drawable/text_background</item>
    </style>

    <!-- Answers CheckBox style -->
    <style name="AnswerCheckBoxStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AnswerCheckBoxStyle.Portrait">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AnswerCheckBoxStyle.Landscape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
